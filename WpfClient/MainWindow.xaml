<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FTP Client Pro" Height="550" Width="850" Background="#F4F7F9" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDC3C7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#DADFE1"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="#E5E9EC" BorderThickness="0,0,0,1">
            <StackPanel>
                <StackPanel x:Name="PanelAuth" Orientation="Horizontal" Margin="15,10">
                    <TextBlock Text="Сервер:" VerticalAlignment="Center" Foreground="#7F8C8D" Margin="0,0,5,0"/>
                    <TextBox x:Name="TxtServer" Text="127.0.0.1" Width="100" Margin="0,0,10,0"/>
                    <TextBox x:Name="TxtPort" Text="8888" Width="50" Margin="0,0,10,0"/>

                    <TextBlock Text="Логин:" VerticalAlignment="Center" Foreground="#7F8C8D" Margin="10,0,5,0"/>
                    <TextBox x:Name="TxtLogin" Width="100" Margin="0,0,10,0" Text="admin"/>

                    <TextBlock Text="Пароль:" VerticalAlignment="Center" Foreground="#7F8C8D" Margin="10,0,5,0"/>
                    <PasswordBox x:Name="TxtPassword" Width="100" Padding="5" Margin="0,0,15,0"/>

                    <Button Content="Войти" Click="BtnLogin_Click" Width="80" Margin="0,0,5,0"/>
                    <Button Content="Регистрация" Click="BtnRegister_Click" Width="100" Background="#2ECC71"/>
                </StackPanel>

                <Border Background="#F9FAFB" Padding="15,8">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                            <Button x:Name="BtnLogout" Content="Выйти" Click="BtnLogout_Click" IsEnabled="False" Background="#E74C3C" Width="70"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="BtnRefresh" Content="Обновить" Click="BtnRefresh_Click" IsEnabled="False" Margin="0,0,8,0" Background="#95A5A6"/>
                            <Button x:Name="BtnUpload" Content="Загрузить файл" Click="BtnUpload_Click" IsEnabled="False" Margin="0,0,8,0" Background="#8E44AD"/>
                            <Button x:Name="BtnHistory" Content="История" Click="BtnHistory_Click" IsEnabled="False" Margin="0,0,15,0" Background="#F39C12"/>

                            <TextBlock x:Name="TxtCurrentPath" Text="Путь: не подключен" VerticalAlignment="Center" Foreground="#34495E" FontWeight="SemiBold"/>
                        </StackPanel>
                    </DockPanel>
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="White" Margin="15" CornerRadius="8" BorderBrush="#E5E9EC" BorderThickness="1">
            <ListView x:Name="ListViewFiles" BorderThickness="0" MouseDoubleClick="ListViewFiles_DoubleClick" Background="Transparent">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Тип" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Type}" FontWeight="Bold"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Имя" Width="400" DisplayMemberBinding="{Binding DisplayName}"/>
                        <GridViewColumn Header="Действие" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Скачать" Click="BtnDownload_Click" Tag="{Binding Name}" 
                                            Visibility="{Binding DownloadVisible}" FontSize="11" Padding="8,2" Background="#3498DB"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>

        <StatusBar Grid.Row="2" Background="#ECF0F1" Foreground="#7F8C8D" Padding="10,2">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Fill="#2ECC71" Margin="0,0,8,0"/>
                    <TextBlock x:Name="TxtStatus" Text="Готов к работе"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>