<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FTP Client" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель: Вход -->
        <StackPanel Grid.Row="0" Background="#EEE">
            <StackPanel x:Name="PanelAuth" Orientation="Horizontal" Margin="10">
                <TextBox x:Name="TxtServer" Text="127.0.0.1" Width="100" Margin="5"/>
                <TextBox x:Name="TxtPort" Text="8888" Width="50" Margin="5"/>
                <TextBox x:Name="TxtLogin" Width="100" Margin="5" Text="admin"/>
                <PasswordBox x:Name="TxtPassword" Width="100" Margin="5"/>
                <Button Content="Войти" Click="BtnLogin_Click" Width="80" Margin="5"/>
                <Button Content="Регистрация" Click="BtnRegister_Click" Width="100" Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,0,10,10">
                <TextBlock x:Name="TxtCurrentPath" Text="Путь: не подключен" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button x:Name="BtnRefresh" Content="Обновить" Click="BtnRefresh_Click" Margin="20,0,5,0" IsEnabled="False"/>
                <Button x:Name="BtnUpload" Content="Загрузить файл" Click="BtnUpload_Click" Margin="5,0,5,0" IsEnabled="False"/>
                <Button x:Name="BtnHistory" Content="История" Click="BtnHistory_Click" Margin="5,0,5,0" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>

        <!-- Список файлов -->
        <ListView x:Name="ListViewFiles" Grid.Row="1" MouseDoubleClick="ListViewFiles_DoubleClick" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Тип" Width="80" DisplayMemberBinding="{Binding Type}"/>
                    <GridViewColumn Header="Имя" Width="300" DisplayMemberBinding="{Binding DisplayName}"/>
                    <GridViewColumn Header="Действие" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Скачать" Click="BtnDownload_Click" Tag="{Binding Name}" Visibility="{Binding DownloadVisible}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Статус бар -->
        <StatusBar Grid.Row="2">
            <TextBlock x:Name="TxtStatus" Text="Готов"/>
        </StatusBar>
    </Grid>
</Window>
