<Window x:Class="WpfClient.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация пользователя" 
        SizeToContent="Height" 
        Width="350" 
        Background="#F4F7F9" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderBrush" Value="#DADFE1"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderBrush" Value="#DADFE1"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Border Padding="25" Background="White" Margin="10" CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="2" Opacity="0.1"/>
        </Border.Effect>

        <StackPanel>
            <TextBlock Text="Создать аккаунт" FontSize="20" FontWeight="Bold" Foreground="#2C3E50" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Логин"/>
            <TextBox x:Name="TxtRegLogin" />

            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="TxtRegPass" />

            <TextBlock Text="Корневая папка на сервере"/>
            <TextBox x:Name="TxtRegPath" Text="C:\FTPStorage\User" Foreground="#95A5A6"/>

            <Button Content="Зарегистрироваться" Click="BtnReg_Click" 
                    Height="40" Background="#2ECC71" Foreground="White" 
                    FontWeight="Bold" Cursor="Hand" Margin="0,10,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Border>
</Window>