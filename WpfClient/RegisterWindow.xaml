<Window x:Class="WpfClient.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="250" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Логин:"/>
        <TextBox x:Name="TxtRegLogin" Margin="0,0,0,10"/>
        <TextBlock Text="Пароль:"/>
        <TextBox x:Name="TxtRegPass" Margin="0,0,0,10"/>
        <TextBlock Text="Папка (на сервере):"/>
        <TextBox x:Name="TxtRegPath" Margin="0,0,0,10" Text="C:\FTPStorage\User1"/>

        <Button Content="Зарегистрироваться" Click="BtnReg_Click" Height="30"/>
    </StackPanel>
</Window>
