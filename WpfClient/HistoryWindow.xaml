<Window x:Class="WpfClient.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="История команд" Height="400" Width="450" Background="#F4F7F9" WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Border Background="White" CornerRadius="8" BorderBrush="#E5E9EC" BorderThickness="1">
            <ListBox x:Name="ListHistory" BorderThickness="0" Padding="10" Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,5">
                            <TextBlock Text="{Binding}" FontSize="13" Foreground="#2C3E50"/>
                            <Separator Background="#F2F2F2" Margin="0,5,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</Window>